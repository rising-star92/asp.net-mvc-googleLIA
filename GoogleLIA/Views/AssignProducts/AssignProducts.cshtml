
@{
    ViewBag.Title = "AssignProducts";
}

<div class="panel panel-default">
    <div style="display: flex; justify-content: center; margin-top: 20px;">
        <text style="font-size: 20px;" class="col-md-3">Select Campaign</text>
        <select class="form-control">
            <option>Campaign-Octopus</option>
        </select>

        <text style="font-size: 20px;" class="col-md-3">Select Ad Group</text>
        <select class="form-control">
            <option>Ad Group-Shirts</option>
        </select>
    </div>

    <div style="margin-top: 20px">
        <div class=" panel-default" style="background-color: #8e92af;">
            <div class="panel panel-heading" style="background-color: #8e92af;">
                <text style="background-color: black; color: white; padding: inherit;">My Products</text>
            </div>
            <div class="panel-body" style="background-color: #8e92af; margin: auto;">
                <div class="col-md-4">
                    <div>
                        <text class="col-md-4" style="color: white;">Source Category</text>
                        <input placeholder="All Category" />
                    </div>

                    <div style="margin-top: 10px;">
                        <text class="col-md-4" style="color: white;">Source Category</text>
                        <input placeholder="All Category" />
                    </div>

                    <div style="margin-top: 10px;">
                        <text class="col-md-4" style="color: white;">Source Category</text>
                        <input placeholder="All Category" />
                    </div>

                    <div style="margin-top: 10px;">
                        <text class="col-md-4" style="color: white;">Source Category</text>
                        <input placeholder="All Category" />
                    </div>

                    <div style="margin-top: 10px;">
                        <text class="col-md-4" style="color: white;">Source Category</text>
                        <input placeholder="All Category" />
                    </div>

                    <div style="margin-top: 10px;">
                        <text class="col-md-4" style="color: white;">Source Category</text>
                        <input placeholder="All Category" />
                    </div>
                </div>

                <div class="col-md-4">
                    <div>
                        <text class="col-md-4" style="color: white;">Marketplace</text>
                        <input type="checkbox" />
                        <text style="color: white;">Not In</text>
                        <select style="width: 31%">
                            <option>None Selected</option>
                        </select>
                    </div>

                    <div style="padding-top: 20px;">
                        <text class="col-md-4" style="color: white;">Item Status </text>
                        <select class="col-md-5">
                            <option>Active Products</option>
                        </select>
                    </div>

                    <div style="padding-top: 35px;">
                        <text class="col-md-4" style="color: white;">Location</text>
                        <input class="col-md-5" />
                    </div>

                    <div style="padding-top: 37px;">
                        <text class="col-md-4" style="color: white;"> Style </text>
                        <select class="col-md-5">
                            <option>All Format</option>
                        </select>
                    </div>

                    <div style="padding-top: 37px;">
                        <text class="col-md-4" style="color: white;"> In-Stock? </text>
                        <select class="col-md-5">
                            <option>All Stock</option>
                        </select>
                    </div>

                    <div style="padding-top: 37px;">
                        <text class="col-md-4" style="color: white; ">Supplier</text>
                        <input class="col-md-5" />
                    </div>
                </div>

                <div class="col-md-4">
                    <div>
                        <text class="col-md-3" style="color: white;">Date Added</text>
                        <input class="col-md-3" type="date" name="startDate" />
                        <input class="col-md-3" type="date" name="EndDate" style="margin-left:20px;" />
                    </div>

                    <div style="padding-top: 40px;">
                        <text class="col-md-3" style="color: white;">Price Range</text>
                        <input class="col-md-3" type="text" name="startDate" />
                        <input class="col-md-3" type="text" name="EndDate" style="margin-left:20px;" />
                    </div>

                    <div style="padding-top: 40px;">
                        <text class="col-md-3" style="color: white;">Stock Level</text>
                        <input class="col-md-3" type="text" name="startDate" />
                        <input class="col-md-3" type="text" name="EndDate" style="margin-left:20px;" />
                    </div>

                    <div style="padding-top: 40px;">
                        <text class="col-md-3" style="color: white;">Image Status</text>
                        <select>
                            <option>All Products</option>
                        </select>
                    </div>
                </div>

            </div>

            <div class="sub-header panel-footer list-inline">
                <span class="glyphicon glyphicon-tasks sub-header-taskicon"></span>
                <span class="sub-head-text">MY PRODUCTS</span>
                <span class="glyphicon glyphicon-refresh sub-header-taskicon right"></span>
                <span class="glyphicon glyphicon-chevron-down sub-header-taskicon right"></span>
            </div>
        </div>
    </div>

    <div>
        <div class="row">
            <div class="col-md-2">
                <input type="checkbox" />
                <text>Select All Pages</text>
            </div>

            <div class="col-md-6">
                <text>Item per page</text>
                <select style="width: 15%;">
                    <option>-Select-</option>
                    <option>10</option>
                    <option>20</option>
                    <option>50</option>
                </select>
            </div>

            <div class="col-md-4">
                <text>Total Records</text>
            </div>
        </div>

        <div style="display:flow-root">
            <table class="table table-bordered" style="margin-top: 10px;">
                <tr>
                    <th><input type="checkbox" /></th>
                    <th scope="col">image</th>
                    <th scope="col">Status</th>
                    <th scope="col">product sku</th>
                    <th scope="col">parent sku</th>
                    <th scope="col">brand</th>
                    <th scope="col">upc</th>
                    <th scope="col">dept. & categories</th>
                    <th scope="col">item name</th>
                    <th scope="col">stock</th>
                    <th scope="col">price</th>
                    <th scope="col">condition</th>
                    <th scope="col">style</th>
                    <th scope="col">value</th>
                    <th scope="col">style</th>
                    <th scope="col">value</th>
                    <th scope="col">style</th>
                    <th scope="col">value</th>
                    <th scope="col">action</th>
                </tr>
            </table>
            <div style="float: right;">
                <ul class="pagination">
                    <li class="disabled"><a href="#">&laquo;</a></li>
                    <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">2 <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">3 <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">4 <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">5 <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">6 <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">7 <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">8 <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">9 <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">10 <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">&raquo;</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div style="margin-top: 20px;">
    <div class="col-md-5" style="margin-top: 10px;"></div>
    <div class="col-md-2 btn-group btn-group-lg">
        <button type="button" class="btn btn-default" style="background-color: yellow; color: black;">CANCEL</button>
        <button type="button" class="btn btn-default" style="background-color: yellow; color: black; margin-left: 20px;">NEXT</button>
    </div>
</div>


