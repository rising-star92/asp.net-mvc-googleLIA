<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="body-content navbar navbar-inverse navbar-fixed-top navbar-dark">
        <ul class="nav navbar-nav navbarul">
            <li class="active header-nav">@Html.ActionLink("Campaigns", "List", "Campaign")</li>            
            <li class="header-nav">@Html.ActionLink("Settings", "Edit", "Setting")</li>
            <li class="header-nav">@Html.ActionLink("Create Campaigns", "Create", "Campaign")</li>
            <li class="header-nav">@Html.ActionLink("Create Ad Groups", "Edit", "AdGroup")</li>
            <li class="header-nav">@Html.ActionLink("Assign Products", "AssignProducts", "AssignProducts")</li>
            <li class="header-nav">@Html.ActionLink("Ad Groups", "List", "AdGroup")</li>
            <li class="header-nav">@Html.ActionLink("Custom Rules", "CustomRules", "LIA")</li>
            <li class="header-nav">@Html.ActionLink("Map Fields", "MapFields", "LIA")</li>
        </ul>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
